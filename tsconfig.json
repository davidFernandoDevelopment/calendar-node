{
	"compilerOptions": {
		"module": "commonjs",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"target": "ES2020",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": false,
		// "outDir": "./cache",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"typeRoots": ["./src/types", "./node_modules/@types"]
	},
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts", "test/**/*.ts"]
}